@model orkesterapp.Models.Performance

@{
    ViewData["Title"] = "Add performance";
    var oID = TempData["OID"];
}

<h1>Create</h1>

<h4>Performance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePerformance">
            <input type="hidden" name="OrchesterID" value="@oID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VenueID" class="control-label"></label>
                <select asp-for="VenueID" class ="form-control" asp-items="ViewBag.VenueID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back home page</a>
</div>

